@model Book

@{
    ViewBag.Title = "DETAIL";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Title</h1>
            </div>

            <div class="card-body text-center">

                <strong>ID:</strong>  @Model.ID
                <br />
                <strong>Description:</strong> <br />
                <p>
                    @Model.Description
                </p> 
                <br />
                <strong>Excerpt:</strong> 
                <p>
                    @Model.Excerpt
                </p>
                <br />

                <strong>Page Count:</strong>   @Model.PageCount
                <br />
                <strong>Publish Date:</strong>
                 @Model.PublishDate

            </div>
            <div class="card-footer text-center">
                <a asp-controller="book" asp-action="index" class="btn btn-primary">Back</a>
                <a class="btn btn-primary" asp-action="edit" asp-controller="book" asp-route-id="@Model.ID">Edit</a>
                <a class="btn btn-danger" asp-action="delete" asp-controller="book" asp-route-id="@Model.ID" >Delete</a>
            </div>

        </div>
    </div>
</div>

@*<h1>@Model.PageTitle</h1>*@


@section Scripts{

    <script src="~/js/CustomScript.js"></script>

}